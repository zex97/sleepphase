<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".EditAlarmActivity"
                android:background="@color/colorPrimary"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
        >

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Alarm Name"
                    android:ems="10"
                    android:id="@+id/editAlarmNameTextEdit"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
            />

            <TimePicker android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:timePickerMode="spinner"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alarm_rounded_background">
                <Spinner android:id="@+id/spinner_edit_alarm_type" android:layout_width="172dp"
                         android:layout_height="42dp"
                         android:entries="@array/spinner_options"
                         app:layout_constraintEnd_toEndOf="parent"
                         android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                         android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                         app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorWhite"/>
                <TextView
                        android:text="Goal:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goalTextViewEditAlarm"
                        app:layout_constraintTop_toTopOf="@+id/timePickerGoalEditAlarm"
                        app:layout_constraintBottom_toBottomOf="@+id/timePickerGoalEditAlarm"
                        app:layout_constraintEnd_toStartOf="@+id/timePickerGoalEditAlarm" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="400dp"
                        app:layout_constraintTop_toBottomOf="@+id/spinner_edit_alarm_type"/>
                <TimePicker android:layout_width="181dp" android:layout_height="120dp"
                            android:timePickerMode="spinner"
                            android:id="@+id/timePickerGoalEditAlarm" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="28dp" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/spinner_edit_alarm_type"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
